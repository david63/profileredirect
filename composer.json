{
    "name": "david63/profileredirect",
    "type": "phpbb-extension",
    "description": "Redirects a user to their UCP when they first log-in after registration.",
    "version": "2.1.0",
    "time": "2017-01-12",
    "keywords": [
		"phpbb",
		"extension",
		"profile",
		"redirect"
	],
    "license": "GPL-2.0-only",
    "authors": [
        {
            "name": "David Wood",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4.0",
		"phpbb/phpbb": ">=3.2.0",
        "composer/installers": "~1.0"
    },
    "extra": {
        "display-name": "Profile redirect",
        "soft-require": {
            "phpbb/phpbb": ">=3.2.0"
        },
		"version-check": {
        	"host": "version.phpbbdev.space",
        	"directory": "/versions",
        	"filename": "profile_redirect_version_file.json",
			"ssl": false
    	}
    }
}